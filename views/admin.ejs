<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/admin.css">
    <style>
        .mpara {
            color: #020202;
        }
    </style>
</head>

<body>

    <form action="/">
        <button type="submit" class="fixed-button">Home</button>
    </form>

    <section id="users" style="max-height: 600px; overflow-y: auto;">
        <div id="content" style="color: white;">
            <br><br>
            <h1 style="text-align: center;">Users</h1>
            <p> </p>
        </div>
        <div id="userscontent" style="display: flex;flex-wrap: wrap ;">
            <!-- <h1>this is for books rendering</h1> -->
            <% for(var i=0; i<list.length; i++) { %>
                <div id="card<%=i%>" class="card text-bg-primary mb-3"
                    style="max-width: 250px; margin-left: 20px; margin-right: 20px;border-radius: 10px; border: solid black 1px;">
                    <img src="<%= list[i].images %>" class="card-img-top" id="bookpic" alt="image"
                        style=" border: solid black 2px;background-color: rgb(215,198,207);width:250px;height: 300px;">

                    <div class="card-body"
                        style="background-color: rgb(135,158,176);border-bottom-left-radius: 10px;border-bottom-right-radius: 10px;">
                        <h5 class="card-title">
                            Name: <%= list[i].name %>
                        </h5>
                        <p class="card-text">
                            Email: <%= list[i].email %>
                        </p>

                        <button type="button" id="More<%=i%>" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#exampleModal<%=i%>">More</button>
                        <!-- Modal -->
                        <div class="modal" id="exampleModal<%=i%>" tabindex="-1" data-bs-backdrop="false">
                            <div class="modal-dialog modal-dialog-centered" style="max-width: 10cm;">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title" style="color: black;">About user</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p class="mpara"><b>Books posted :</b> <br>
                                            <%= list[i].posts.length %> books
                                        </p>
                                        <p class="mpara"><b>Ordered for :</b> <br>
                                            <%= list[i].orders.length %> books
                                        </p>
                                        <p class="mpara"><b>Requests he got :</b> <br>
                                            <%= list[i].requests.length %> requests
                                        </p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>

                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <% } %>


        </div>
    </section>


</body>

</html>